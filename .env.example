# ===============================================
# Next.js Configuration
# ===============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===============================================
# Supabase Configuration
# ===============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-public-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===============================================
# LemonSqueezy Configuration
# ===============================================
# API Key from LemonSqueezy Settings > API
LEMONSQUEEZY_API_KEY=lmsq_sk_...

# Store ID from LemonSqueezy Dashboard
LEMONSQUEEZY_STORE_ID=12345

# Webhook Secret for webhook signature verification
LEMONSQUEEZY_WEBHOOK_SECRET=your-webhook-secret

# Webhook URL (should point to your deployed app)
LEMONSQUEEZY_WEBHOOK_URL=https://your-app.com/api/webhooks/lemonsqueezy

# ===============================================
# LemonSqueezy Product & Variant IDs
# ===============================================
# Casual Learner Plan ($9/month)
LEMONSQUEEZY_CASUAL_PRODUCT_ID=123456
LEMONSQUEEZY_CASUAL_VARIANT_ID=123456

# GigaChad Developer Plan ($19/month)
LEMONSQUEEZY_GIGACHAD_PRODUCT_ID=234567
LEMONSQUEEZY_GIGACHAD_VARIANT_ID=234567

# Sigma Grindset Plan ($39/month)
LEMONSQUEEZY_SIGMA_PRODUCT_ID=345678
